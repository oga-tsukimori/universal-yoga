<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.UniversalYogaLondon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#FFB6C1</item> <!-- Light pink -->
        <item name="colorPrimaryVariant">#FF69B4</item> <!-- Darker pink for status bar -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">#FF69B4</item> <!-- Darker pink -->
        <item name="colorSecondaryVariant">#FF1493</item> <!-- Even darker pink -->
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Custom colors -->
        <item name="android:colorBackground">#FFF0F5</item>
        <item name="android:textColor">#FF69B4</item>
    </style>

    <style name="Theme.UniversalYogaLondon.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UniversalYogaLondon.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.UniversalYogaLondon.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Add any other unique styles that were in styles.xml here -->
</resources>
